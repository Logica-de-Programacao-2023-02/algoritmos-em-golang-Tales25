// Faça um algoritmo que leia três números inteiros e mostre a soma entre eles.
package main

import "fmt"

func main() {
	var n1, n2, n3, soma int
	fmt.Print("Primeiro número: ")
	fmt.Scan(&n1)
	fmt.Print("Segundo número: ")
	fmt.Scan(&n2)
	fmt.Print("Terceiro número: ")
	fmt.Scan(&n3)
	soma = n1 + n2 + n3
	fmt.Print(n1, "+", n2, "+", n3, "=", soma)
}



//Faça um algoritmo que leia um número inteiro e mostre o seu dobro, triplo e quadruplo.

package main

import "fmt"

func main() {
	//declaração de variáveis
	var number int
	//programa em si
	fmt.Print("Digite um número: ")
	fmt.Scan(&number)
	dobro := number * 2
	triplo := number * 3
	quadruplo := number * 4
	fmt.Println("Seu dobro é ", dobro)
	fmt.Println("Seu triplo é ", triplo)
	fmt.Println("Seu quadruplo é ", quadruplo)
}



//Faça um algoritmo que leia o peso e a altura de uma pessoa e calcule o seu IMC (Índice de Massa Corporal).

package main

import "fmt"

func main() {
	var peso, altura, altura2, resultado float64
	fmt.Print("Quanto você pesa? [kg] ")
	fmt.Scan(&peso)
	fmt.Print("E qual é sua altura? [m] ")
	fmt.Scan(&altura)
	altura2 = altura * altura
	resultado = peso / altura2
	fmt.Print("Seu IMC é de ", resultado)
}



//Faça um algoritmo que leia três números reais e mostre a média ponderada entre
//eles, com pesos 2, 3 e 5, respectivamente.

package main

import "fmt"

func main() {
	var n1, n2, n3, media float64
	fmt.Print("Escolha o primeiro número: ")
	fmt.Scan(&n1)
	fmt.Print("Escolha o segundo número: ")
	fmt.Scan(&n2)
	fmt.Print("Escolha o terceiro número: ")
	fmt.Scan(&n3)
	media = (n1 + n2 + n3) / 3
	fmt.Print("A média é ", media)
}



//Faça um algoritmo que leia a idade de uma pessoa em anos e mostre a idade em dias.

package main

import "fmt"

func main() {
	var anos int
	fmt.Print("Quantos anos você tem? ")
	fmt.Scan(&anos)
	dias := anos * 365
	fmt.Print("Você tem aproximadamente ", dias, " dias de vida.")
}



//Faça um algoritmo que leia o salário de um funcionário e calcule o seu novo
//salário com um aumento de 15%.

package main

import "fmt"

func main() {
	var salario float64
	fmt.Print("Qual é o seu salário atual? ")
	fmt.Scan(&salario)
	salario = salario + (salario * 15 / 100)
	fmt.Print("Seu novo salário é de ", salario)
}



//Faça um algoritmo que leia um número inteiro e mostre o seu sucessor e antecessor.

package main

import "fmt"

func main() {
	var numero int
	fmt.Print("Escolha um número: ")
	fmt.Scan(&numero)
	ante := numero - 1
	suce := numero + 1
	fmt.Println("Seu antecessor é ", ante)
	fmt.Print("Seu sucessor é ", suce)
}
